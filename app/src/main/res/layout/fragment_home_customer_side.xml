<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".activities.OptionsActivty">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mikeyTextMain"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="@string/text_mikeyboo_nails"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_text_mikeyboo_nails"
                android:textSize="@dimen/text_mikeyboo_nails_size"
                android:textStyle="bold"
                />
            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="@dimen/width_navigation"
                android:layout_height="@dimen/height_mikeyboo_nails"
                android:layout_marginTop="@dimen/navigation_margin"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/instagram_icon"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_mikeyboo_nails"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_each_icon"
                    android:src="@drawable/instagram" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/whatsapp_icon"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_mikeyboo_nails"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_each_icon"
                    android:src="@drawable/whatsapp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/phone_icon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_mikeyboo_nails"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_each_icon"
                    android:clickable="true"
                    android:src="@drawable/phone_call" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/googleMap_icon"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_mikeyboo_nails"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_each_icon"
                    android:src="@drawable/placeholder" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mikeyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_text_mikeyboo_nails"
                android:text="@string/hey"
                android:textSize="@dimen/text_mikeyboo_nails_size"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:text="התור הקרוב שלי:"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/address_margin_top"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/main_LST_scores"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:text="אין תור קרוב"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                tools:listitem="@layout/horizontal" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text= "ביטול תור"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_turn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text= "שינוי תור"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"
                    />

            </LinearLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/what_do_today_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text"
                android:layout_marginTop="@dimen/address_margin_top"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_gravity="end"
                android:textSize="30sp"
                android:textStyle="bold"

                />

            <LinearLayout
                android:id="@+id/list_of_options1"
                android:layout_width="370dp"
                android:layout_height="@dimen/heigth_list_of"
                android:layout_marginTop="@dimen/margin_right"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lak_gel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="@string/_120"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="@dimen/textview_between"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/milui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_140"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="@dimen/textview_between"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/menikur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="@string/_60"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_of_options2"
                android:layout_width="300dp"
                android:layout_height="@dimen/heigth_list_of"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="@dimen/textview_between"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/hasara"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_40"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="@dimen/textview_between"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tzior"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_15_40"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_of_options3"
                android:layout_width="350dp"
                android:layout_height="@dimen/heigth_list_of"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tikun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_100"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="@dimen/textview_between"
                    android:layout_height="wrap_content"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bnia_hadash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_270"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_of_list"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/worksText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/address_margin_top"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_gravity="end"
                android:text="@string/Reviews"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/addReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_gravity="end"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:text="הוסף"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/text_address_size"
                    android:textStyle="bold"
                    app:strokeColor="@color/black"
                    app:strokeWidth="@dimen/frame_width" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"

                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_enter_review"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:hint="ביקורת"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"

                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/review_text"
                    android:textSize="21sp"
                    android:textColor="@color/black"
                    android:text="הוסף ביקורת :"

                    />
            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                tools:listitem="@layout/reviews_list" />
        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</RelativeLayout>